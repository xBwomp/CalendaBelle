{
  "name": "raspberry-pi-calendar-dashboard",
  "version": "1.0.0",
  "description": "Local calendar dashboard for Raspberry Pi with Google Calendar sync",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec \"node --loader ts-node/esm\" src/server/index.ts",
    "client:dev": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "node dist/server/index.js",
    "setup:db": "node --loader ts-node/esm src/server/scripts/setup-database.ts",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "@types/sqlite3": "^3.1.11",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "lucide-react": "^0.288.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^7.1.5"
  },
  "keywords": [
    "raspberry-pi",
    "calendar",
    "dashboard",
    "google-calendar",
    "offline"
  ],
  "author": "Calendar Dashboard",
  "license": "MIT"
}
